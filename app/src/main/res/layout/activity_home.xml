<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToOutline="true">
    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:cardCornerRadius="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="54dp"
        android:clickable="true"
        android:elevation="0.3dp"
        android:focusable="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_menu"
            android:id="@+id/iv_menu"
            android:contentDescription="TODO" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_deliver_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="59dp"
        android:text="DELIVER TO"
        android:gravity="top"
        android:textColor="@color/mainColor"
        android:textStyle="bold"
        />
    <Spinner
        android:id="@+id/sp_place_deliver"
        android:layout_width="120dp"
        android:layout_height="17dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="80dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:cardCornerRadius="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="306dp"
        android:layout_marginTop="54dp"
        android:clickable="true"
        android:elevation="0.3dp"
        android:focusable="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_bag"
            android:id="@+id/iv_bag"
            android:contentDescription="TODO" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:cardCornerRadius="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="328dp"
        android:layout_marginTop="50dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/mainColor"
        app:contentPaddingLeft="8dp"
        app:contentPaddingTop="2dp"
        android:elevation="0.3dp"
        android:focusable="true">
        <TextView
            android:layout_width="9dp"
            android:layout_height="19dp"
            android:text="2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:id="@+id/tv_bag_noti"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_hello_text"
        android:layout_width="213dp"
        android:layout_height="26dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="123dp"
        android:text="Hey Quang, are you ok?"
        android:lineSpacingExtra="7sp"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/et_hp_seachBar"
        android:layout_width="327dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="165dp"
        android:text="Search dishes,restaurants"
        android:textColor="@color/searchTextColor"
        android:textSize="16sp"
        android:paddingTop="20dp"
        android:paddingBottom="16dp"
        android:drawableStart="@drawable/ic_search_foreground"
        android:drawablePadding="1dp"
        android:background="@drawable/custom_search"
        android:elevation="0.3dp"
        />
    <TextView
        android:id="@+id/tv_all_categor"
        android:layout_width="132dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:text="ALL Categories"
        android:gravity="top"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/tv_see_all"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="288dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="253dp"
        android:text="See All"
        android:gravity="top"
        android:textSize="16sp"
        android:clickable="true"
        app:drawableRightCompat="@drawable/ic_right_arrow_foreground"
        android:focusable="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp"/>

    <TextView
        android:id="@+id/tv_open_restau"
        android:layout_width="160dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="395dp"
        android:text="Open Restaurants"
        android:gravity="top"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/tv_see_all_res"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="288dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="398dp"
        android:text="See All"
        android:gravity="top"
        android:textSize="16sp"
        android:clickable="true"
        app:drawableRightCompat="@drawable/ic_right_arrow_foreground"
        android:focusable="true"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="430dp"
        />
</RelativeLayout>