<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="start"
    android:elevation="15dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="20dp"
        android:elevation="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/imageViewRes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pho"
            android:scaleType="fitXY"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView1Res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="278dp"
        android:text="Sample Text 1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        />

    <TextView
        android:id="@+id/textView2Res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="314dp"
        android:text="Sample Text 2"
        android:textSize="16sp"
        android:paddingTop="8dp"
        />

    <ImageView
        android:id="@+id/ic_star"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_right_start_foreground"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="360dp"
        />
    <TextView
        android:id="@+id/textViewStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="362dp"
        android:text="5"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        />

    <ImageView
        android:id="@+id/ic_car"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_delivery_car_foreground"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="356dp"
        />
    <TextView
        android:id="@+id/textViewDeliveryCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="144dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="360dp"
        android:text="Free"
        android:textSize="19sp"
        android:paddingTop="8dp"
        />

    <ImageView
        android:id="@+id/ic_time"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_time_foreground"
        android:layout_alignParentStart="true"
        android:layout_marginStart="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="356dp"
        />
    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="250dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="362dp"
        android:text="20 min"
        android:textSize="19sp"
        android:paddingTop="8dp"
        />


</androidx.cardview.widget.CardView>
