<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SearchPageActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:cardCornerRadius="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="54dp"
        android:clickable="true"
        android:elevation="0.3dp"
        android:focusable="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_left_arrow"
            android:id="@+id/iv_left_arrow"
            android:contentDescription="TODO" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/search"
        android:layout_width="54dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="85dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="66dp"
        android:text="Search"
        android:textSize="16sp"
        android:lineSpacingExtra="2sp"
        android:translationY="-0.77sp"
        android:gravity="top"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:cardCornerRadius="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="306dp"
        android:layout_marginTop="54dp"
        android:clickable="true"
        android:elevation="0.3dp"
        android:focusable="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_bag"
            android:id="@+id/iv_bag"
            android:contentDescription="TODO" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:cardCornerRadius="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="328dp"
        android:layout_marginTop="50dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/mainColor"
        app:contentPaddingLeft="8dp"
        app:contentPaddingTop="2dp"
        android:elevation="0.3dp"
        android:focusable="true">
        <TextView
            android:layout_width="9dp"
            android:layout_height="19dp"
            android:text="2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:id="@+id/tv_bag_noti"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_seachBar"
        android:layout_width="327dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="123dp"
        android:hint="Search dishes,restaurants "
        android:textColor="@color/searchTextColor"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_search_foreground"
        android:drawablePadding="1dp"
        android:background="@drawable/custom_search"
        android:elevation="0.3dp"
        android:autofillHints="" />

    <TextView
        android:id="@+id/tv_Recent_keywords"
        android:layout_width="140dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="209dp"
        android:text="Recent Keywords"
        android:gravity="top"
        android:textSize="18sp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="245dp"/>

    <TextView
        android:id="@+id/tv_Suggested_Restaurants"
        android:layout_width="214dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="326dp"
        android:text="Suggested Restautants"
        android:gravity="top"
        android:textSize="18sp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="367dp"/>

    <TextView
        android:id="@+id/tv_Popular_Fast_Food"
        android:layout_width="214dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="590dp"
        android:text="Popular Food"
        android:gravity="top"
        android:textSize="20sp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="630dp"/>
</RelativeLayout>